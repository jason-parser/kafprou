<div class="container">
	<h1>Teachers</h1>
</div>
<div class="container">
	<div class="row">
		<div class="col-sm-8 col-md-9">
			<h4 class="text-weight-normal">Showing {{ data.teachers.length}} post.</h4>
			<div class="blog">
				{{# each data.teachers}}
				<div data-ks-editable="{{#if ../user}}{{adminEditableUrl ../../user _id}}{{/if}}" class="post">
					<h2>{{{name}}}</h2>
					<p class="lead text-muted">{{{position}}}
					</p>
					{{#if image}}<img src="{{{cloudinaryUrl image width=160 height=160 crop='fit' }}}" class="img pull-right">{{/if}}
				</div>
				{{/each}}
			</div>
		</div>
	</div>
</div>
